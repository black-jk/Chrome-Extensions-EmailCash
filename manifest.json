{
  "manifest_version": 2,
  
  "name": "EmailCash Daily Operator",
  
  "version": "2.0.0",
  
  "author": "BlackJK",
  
  "description": "EmailCash Daily Operator",
  
  
  "options_page": "options.html",
  
  "permissions": [
  	"storage"
  ],
  
  "content_scripts": [
    {
      "matches": [
        "http://emailcash.com.tw/*",
        "http://www.emailcash.com.tw/*"
      ],
      "exclude_matches": [
        "http://emailcash.com.tw/login.asp*",
        "http://www.emailcash.com.tw/login.asp*",
        
        "http://emailcash.com.tw/itemjoin.asp*",
        "http://www.emailcash.com.tw/itemjoin.asp*",
        
        "http://emailcash.com.tw/FaceBook*",
        "http://www.emailcash.com.tw/FaceBook*",
        
        "http://emailcash.com.tw/adtop.asp*",
        "http://www.emailcash.com.tw/adtop.asp*"
      ],
      "js": ["jquery-2.1.1.min.js", "configuration.js", "library.js", "classes.js", "main.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ]
}
